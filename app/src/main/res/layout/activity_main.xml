<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/courseGradeET2"
        android:layout_width="64dp"
        android:layout_height="42dp"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:hint="Grade"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/courseGradeET"
        app:layout_constraintTop_toTopOf="@+id/courseCreditET2" />

    <EditText
        android:id="@+id/courseNameET2"
        android:layout_width="119dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Course Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/courseNameET"
        app:layout_constraintTop_toBottomOf="@+id/courseNameET" />

    <EditText
        android:id="@+id/courseCreditET2"
        android:layout_width="79dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Credit"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/courseCreditET"
        app:layout_constraintTop_toTopOf="@+id/courseNameET2" />

    <TextView
        android:id="@+id/coursePointTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="0.0"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/coursePointTV"
        app:layout_constraintTop_toTopOf="@+id/courseGradeET2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="224dp"
        android:layout_height="42dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="GPA CALCULATOR"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="71dp"
        android:layout_height="29dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:text="Course"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="74dp"
        android:layout_height="29dp"
        android:layout_marginStart="60dp"
        android:text="Credit"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="61dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:text="Grade"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Grade Point:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <EditText
        android:id="@+id/courseNameET"
        android:layout_width="119dp"
        android:layout_height="44dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Course Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/courseCreditET"
        android:layout_width="79dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Credit"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/courseNameET" />

    <EditText
        android:id="@+id/courseGradeET"
        android:layout_width="64dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Grade"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/courseCreditET" />

    <TextView
        android:id="@+id/coursePointTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="0.0"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/courseGradeET" />

    <Button
        android:id="@+id/calculateGPABtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="80dp"
        android:text="Calculate"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseNameET2" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Reset"
        app:layout_constraintStart_toEndOf="@+id/calculateGPABtn"
        app:layout_constraintTop_toTopOf="@+id/calculateGPABtn" />
</androidx.constraintlayout.widget.ConstraintLayout>